<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="PresenceClient.Avalonia.App"
             xmlns:local="using:PresenceClient.Avalonia"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Styles>
        <FluentTheme />
    </Application.Styles>
             <TrayIcon.Icons>
                 <TrayIcons>
                     <TrayIcon IsVisible="False" Icon="/Assets/avalonia-logo.ico" ToolTipText="Switch Presence Client">
                         <TrayIcon.Menu>
                             <NativeMenu>
                                 <NativeMenuItem Header="Show"/>
                                 <NativeMenuItem Header="Exit"/>
                             </NativeMenu>
                         </TrayIcon.Menu>
                     </TrayIcon>
                 </TrayIcons>
             </TrayIcon.Icons>
</Application>